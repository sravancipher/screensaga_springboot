package com.rest.screensaga.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.rest.screensaga.dao.UserDetailsDAO;
import com.rest.screensaga.entities.User;
@Service
public class UserDetailsService {
	@Autowired
	private UserDetailsDAO userDetailsDAO;
	
	public User createUser(User user) {
		return userDetailsDAO.save(user);
	}
	public User getUser(String user_mail) {
		 return userDetailsDAO.findById(usermail).get();
	}
}
